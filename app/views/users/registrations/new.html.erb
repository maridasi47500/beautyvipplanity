  <div class="card-header bg-transparent border-success"><span onclick="off(event);return false;" class="close">&times;</span>
      
      <h2>S'inscrire</h2>
      <p>C'est rapide et facile.</p>
  
  </div>
  <div class="card-body text-success">
        <%= form_for(resource, as: resource_name, url: createsignup_path) do |f| %>
          <div class="row g-3">
            <div class="col-sm-6">
              <label hidden for="firstName" class="form-label">First name</label>
              <%= f.text_field :firstname, class: "form-control", id: "firstName", placeholder: "Prénom", value: "", required: true%>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label hidden="true" for="lastName" class="form-label">Last name</label>
              <%= f.text_field :lastname, class: "form-control", id: "lastName", placeholder: "Nom de famille", value: "", required: true%>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>


            <div class="col-12">
              <label hidden="true" for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
              <%= f.text_field :email, class: "form-control", id: "email", placeholder: "Adresse e-mail ou numéro de tél", value: "", required: true%>
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label hidden="true" for="password" class="form-label">Password</label>
              <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Nouveau mot de passe", value: "", required: true%>
              <div class="invalid-feedback">
                Please enter your password.
              </div>
            </div>

            <div class="col-12">
                <label for="dob" class="form-floating form-label">Date of birth</label></br>
              <%=f.date_select :dateofbirth, class: "form-control", id:"dateofbirth", start_year: 1905, placeholder: "Date of birth", required: true%>
              <div class="invalid-feedback">
                Please enter your Date of birth.
              </div>
            </div>


            <div class="col-12">
              <%= f.collection_radio_buttons(:genre, [['men','h','Homme'],['women','f','Femme'],['personnalise','p','Personnalisé']], :second, :last, {}, {onchange: "$.ajax({url:'#{mygenre_path}?mygenre='+$(this).val(),type:'post',success:function(mydata){$('.myowngenre')[0].outerHTML=mydata;($('.myowngenre')[0].innerHTML == '' ? ($('.myowngenre')[1].outerHTML='') : '');},error:function(){console.log('my error');}});"}) do |mygenre| %>
                <div class="form-check form-check-inline">
                    <%= mygenre.radio_button(class: 'form-check-input', id: "genre_#{mygenre.object.second}") %>
                    <%= mygenre.label(class: 'form-check-label', for: "genre_#{mygenre.object.second}") %>
                </div>
            <% end %>
          </div>
                          <div class="myowngenre">
                          </div>
  </div>
          <hr class="my-4">
  <div class="field card-text myloginfieldscont d-flex mybtncontainer justify-content-center">

    <%= f.submit "Sign up", class: " btn btn-success btncreateaccount2" %>
        </div>
